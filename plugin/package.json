{
  "name": "com.fcannizzaro.hoyodeck",
  "version": "1.0.0",
  "description": "HoYoverse game utilities for Stream Deck",
  "author": "fcannizzaro",
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun rollup -c -w --watch.onEnd=\"streamdeck restart com.fcannizzaro.hoyodeck\"",
    "build": "tsc --noEmit && rollup -c",
    "package": "streamdeck pack --force-update-check  -f ./com.fcannizzaro.hoyodeck.sdPlugin",
    "link": "streamdeck link com.fcannizzaro.hoyodeck.sdPlugin",
    "typecheck": "tsc --noEmit",
    "cli": "bfr --env -- bun run src/cli.ts"
  },
  "dependencies": {
    "@elgato/streamdeck": "^2.0.0",
    "@hoyodeck/shared": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@elgato/cli": "^1.7.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.2.3",
    "rollup": "^4.57.1",
    "rollup-plugin-swc3": "^0.12.1",
    "tslib": "^2.8.0"
  },
  "engines": {
    "node": ">=20"
  }
}
