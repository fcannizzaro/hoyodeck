{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
  "UUID": "com.fcannizzaro.hoyodeck",
  "Name": "Hoyo Deck",
  "Author": "fcannizzaro",
  "Description": "HoYoverse games utilities for Stream Deck (Genshin Impact, Honkai: Star Rail and Zenless Zone Zero)",
  "Version": "1.0.0.0",
  "SDKVersion": 2,
  "Software": {
    "MinimumVersion": "6.6"
  },
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "13"
    },
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "--inspect=127.0.0.1:9990"
  },
  "CodePath": "bin/plugin.js",
  "Category": "Hoyo Deck",
  "CategoryIcon": "imgs/plugin/category",
  "Icon": "imgs/plugin/icon",
  "PropertyInspectorPath": "ui/index.html",
  "Actions": [
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.resin",
      "Name": "[GI] Resin",
      "Icon": "imgs/actions/gi/resin-icon",
      "Tooltip": "Display and refresh Original Resin",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/gi/resin-state",
          "TitleAlignment": "middle"
        }
      ]
    },
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.commission",
      "Name": "[GI] Commissions",
      "Icon": "imgs/actions/gi/commissions-icon",
      "Tooltip": "Display remaining daily commissions",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/gi/commissions-state",
          "TitleAlignment": "middle"
        }
      ]
    },
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.expedition",
      "Name": "[GI] Expeditions",
      "Icon": "imgs/actions/gi/expeditions-icon",
      "Tooltip": "Display completed expeditions",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/gi/expeditions-state",
          "TitleAlignment": "middle"
        }
      ]
    },
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.teapot",
      "Name": "[GI] Teapot",
      "Icon": "imgs/actions/gi/teapot-icon",
      "Tooltip": "Display Serenitea Pot realm currency",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/gi/teapot-state",
          "TitleAlignment": "middle"
        }
      ]
    },
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.transformer",
      "Name": "[GI] Transformer",
      "Icon": "imgs/actions/gi/transformerIcon",
      "Tooltip": "Display Parametric Transformer cooldown",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/gi/transformerState",
          "TitleAlignment": "middle"
        },
        {
          "Image": "imgs/actions/gi/transformerReadyState",
          "TitleAlignment": "middle",
          "Name": "Ready"
        }
      ]
    },
    {
      "UUID": "com.fcannizzaro.hoyodeck.genshin.abyss",
      "Name": "[GI] Spiral Abyss",
      "Icon": "imgs/actions/gi/abyssIcon",
